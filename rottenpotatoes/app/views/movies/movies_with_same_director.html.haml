-# in app/views/movies/movies_with_same_director.html.haml

%h2 Details about #{@movie.title}

%ul#details
  %li
    Rating:
    = @movie.rating
  %li
    Director:
    = @movie.director
    = link_to 'Find Movies With Same Director', movies_with_same_director_path(:id => @movie.id)
    
  %li
    Released on:
    = @movie.release_date.strftime("%B %d, %Y")

%h3 Description:

%p#description= @movie.description

%h2 #{@movie.director} directed:


%ul#details
  - @movies.each do |movie|
    %li
      = movie.title

= link_to 'Back to movie list', movies_path
